pipeline {
    agent any

    tools {
        jdk 'Openjdk21'
        maven 'Maven3'
    }

    stages {

        stage('SCM') {
            steps {
                git branch: 'main', changelog: false, poll: false, url: 'https://github.com/pruthvik235/jenkins-pipeline.git'
            }
        }

        stage('Maven Build') {
            steps {
                sh "mvn clean install"
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'github-credentials') {
                        sh "docker build -t yathisha/docker-sept:tag123 ."
                        sh "docker push yathisha/docker-sept:tag123"
                    }
                }
            }
        }

    }
}
